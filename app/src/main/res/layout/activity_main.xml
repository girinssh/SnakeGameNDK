<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kr.ac.cau_embedded.snakegame.MainActivity"
    android:background= "@android:color/white"
    android:layout_margin="8dp"
    >

  <kr.ac.cau_embedded.snakegame.SnakePanelView
      android:id="@+id/snake_view"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintHorizontal_weight="0.6"
      app:layout_constraintEnd_toStartOf="@id/interface_layout"
      />

  <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/interface_layout"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toEndOf="@id/snake_view"
      app:layout_constraintEnd_toEndOf="parent"
      android:orientation="vertical"
      android:gravity="center"
      android:background= "@android:color/white"
      app:layout_constraintHorizontal_weight="0.4"
      android:layout_marginEnd="24dp"
    >
    <Button
      android:id="@+id/start_btn"
      android:layout_width="120dp"
      android:layout_height="50dp"
      android:layout_marginStart="@dimen/margin_default"
      android:background="@drawable/restart_btn_background"
      android:text="START"
      android:textColor="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="@dimen/margin_default"
      />
    <LinearLayout
        android:id="@+id/timer_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/margin_default"
        android:layout_marginVertical="8dp"
        app:layout_constraintTop_toBottomOf="@id/start_btn"
        app:layout_constraintBottom_toTopOf="@id/score_layout"
      >
      <TextView
          android:id="@+id/timer"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Time: "
          android:textSize="24sp"
          android:layout_weight="0.5"
          />
      <TextView
          android:id="@+id/time_value"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="0"
          android:textSize="24sp"
          android:textAlignment="textEnd"
          android:layout_weight="0.5"
          />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/score_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/margin_default"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/timer_layout"
        app:layout_constraintBottom_toTopOf="@id/combo_layout"
        >
      <TextView
          android:id="@+id/score"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Score: "
          android:textSize="24sp"
          android:layout_weight="0.5"
          />
      <TextView
          android:id="@+id/score_value"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="0"
          android:textSize="24sp"
          android:textAlignment="textEnd"
          android:layout_weight="0.5"
          />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/combo_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/margin_default"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/score_layout"
        app:layout_constraintBottom_toTopOf="@id/top_btn"
        >
      <TextView
          android:id="@+id/combo"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Combo: "
          android:textSize="24sp"
          android:layout_weight="0.5"
          />
      <TextView
          android:id="@+id/combo_value"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="0"
          android:textSize="24sp"
          android:textAlignment="textEnd"
          android:layout_weight="0.5"
          />
    </LinearLayout>
    <Button
        android:id="@+id/top_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginVertical="@dimen/margin_default"
        android:background="@drawable/direction_btn_background"
        android:text="TOP"
        android:textColor="@android:color/white"

        app:layout_constraintWidth_percent="0.30"
        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintBottom_toTopOf="@id/left_btn"
        app:layout_constraintTop_toBottomOf="@id/score_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

      <Button
          android:id="@+id/left_btn"
          android:layout_width="0dp"
          android:layout_height="0dp"
          android:layout_marginVertical="@dimen/margin_default"
          android:background="@drawable/direction_btn_background"
          android:text="LEFT"
          android:textColor="@android:color/white"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/top_btn"
          app:layout_constraintBottom_toTopOf="@id/bottom_btn"
          app:layout_constraintWidth_percent="0.30"
          app:layout_constraintHeight_percent="0.12"
          />
      <Button
          android:id="@+id/right_btn"
          android:layout_width="0dp"
          android:layout_height="0dp"
          android:background="@drawable/direction_btn_background"
          android:text="RIGHT"
          android:textColor="@android:color/white"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toTopOf="@id/left_btn"
          app:layout_constraintBottom_toBottomOf="@id/left_btn"
          app:layout_constraintWidth_percent="0.30"
          app:layout_constraintHeight_percent="0.12"
          />


    <Button
        android:id="@+id/bottom_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginVertical="@dimen/margin_default"
        android:background="@drawable/direction_btn_background"
        android:text="BOTTOM"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/left_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/top_btn"
        app:layout_constraintEnd_toEndOf="@id/top_btn"
        app:layout_constraintWidth_percent="0.30"
        app:layout_constraintHeight_percent="0.12"
        />
  </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>
